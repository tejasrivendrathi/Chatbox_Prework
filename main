#intro 

print("Welcome to the Elite 101 Chatbot!")
name = input("Please enter your name: ")
age = input(f"Nice to meet you, {name}! How old are you? ")
print(f"Welcome {name}! Being {age} was so nice! Anyway.")
print("How can I help you today?\n")

#options
print("Please choose from the following options:")
print("1. Pick me!")
print("2. Please pick me!")
print("3. Pick me and find out what happens.")
print("4. Exit the conversation\n")

#logic
while True:
    choice = input("Enter the number of your choice: ")
    
    if choice == "1":
        print("Nothing happened.")
    elif choice == "2":
        print("Still nothing...")
    elif choice == "3":
        print("3 is my lucky number!")
    elif choice == "4":
        print("That's all, bye!")
        break
    else:
        print("Invalid choice, please pick between 1 and 4.")












  



